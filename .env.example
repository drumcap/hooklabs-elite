# =======================
# 🏢 환경 설정 (Environment Configuration)
# =======================

# 현재 환경 (development/staging/production)
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# 앱 설정
NEXT_PUBLIC_APP_NAME="HookLabs Elite"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0

# =======================
# 🗄️ Convex 데이터베이스 설정
# =======================
# Run npx convex dev or bunx convex dev and it'll get CONVEX_DEPLOYMENT and NEXT_PUBLIC_CONVEX_URL 
# These are also available from your Convex dashboard at https://dashboard.convex.dev
CONVEX_DEPLOYMENT=dev:your-deployment-name
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud

# =======================
# 🔐 Clerk 인증 시스템
# =======================
# Get these from your Clerk dashboard at https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Clerk JWT 설정 (JWT template named "convex" required)
NEXT_PUBLIC_CLERK_FRONTEND_API_URL=https://your-clerk-frontend-api-url.clerk.accounts.dev

# Clerk 리디렉션 설정
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard

# =======================
# 🍋 Lemon Squeezy 결제 시스템
# =======================
# Get these from your Lemon Squeezy dashboard at https://app.lemonsqueezy.com
LEMONSQUEEZY_API_KEY=lsqls_your_api_key_here
LEMONSQUEEZY_STORE_ID=your_store_id_here
NEXT_PUBLIC_LEMONSQUEEZY_CHECKOUT_URL=https://your-store.lemonsqueezy.com/checkout/

# =======================
# 📊 모니터링 & 분석 시스템
# =======================

# Sentry 에러 추적 (https://sentry.io)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_AUTH_TOKEN=your-auth-token

# Vercel Analytics (자동으로 설정됨 in production)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# Google Analytics (선택적)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel (선택적)
NEXT_PUBLIC_MIXPANEL_PROJECT_TOKEN=your-mixpanel-token

# =======================
# 🔒 보안 설정
# =======================

# Rate Limiting
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# CORS 설정
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# =======================
# 📧 이메일 서비스 (선택적)
# =======================

# Resend (https://resend.com)
RESEND_API_KEY=re_your-api-key

# =======================
# ☁️ 클라우드 서비스 설정
# =======================

# AWS S3 (파일 업로드용 - 선택적)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-bucket-name

# =======================
# 🧪 개발/테스트 환경 설정
# =======================

# 테스트 환경 변수
TEST_DATABASE_URL=test-convex-url
TEST_CLERK_SECRET_KEY=sk_test_your_test_key
TEST_LEMONSQUEEZY_API_KEY=test_api_key

# 개발 모드 설정
NEXT_DEV_MODE=true
DEBUG_MODE=true

# =======================
# 📝 로깅 설정
# =======================

# 로그 레벨 (error, warn, info, debug)
LOG_LEVEL=info
NEXT_PUBLIC_LOG_LEVEL=warn

# =======================
# 🚀 배포 관련 설정
# =======================

# Vercel 설정 (프로덕션에서 자동 설정)
VERCEL_URL=your-app.vercel.app
VERCEL_ENV=development

# 빌드 최적화
NEXT_TELEMETRY_DISABLED=1
ANALYZE=false

# =======================
# 🤖 AI 서비스 설정 (소셜 미디어 자동화)
# =======================

# Google Gemini AI API
GOOGLE_AI_API_KEY=your-gemini-api-key-here
GOOGLE_AI_MODEL=gemini-1.5-pro
GOOGLE_AI_TEMPERATURE=0.7
GOOGLE_AI_MAX_OUTPUT_TOKENS=1000

# OpenAI (백업 또는 대체용)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7

# =======================
# 🐦 소셜 미디어 API 설정
# =======================

# Twitter/X API v2
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
NEXT_PUBLIC_TWITTER_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/twitter/callback

# Meta Threads API
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
THREADS_ACCESS_TOKEN=your-threads-access-token
NEXT_PUBLIC_THREADS_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/threads/callback

# LinkedIn API (선택적)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
NEXT_PUBLIC_LINKEDIN_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/linkedin/callback

# =======================
# 🔒 소셜 미디어 토큰 암호화 설정
# =======================

# 토큰 암호화를 위한 키 (32바이트 랜덤 문자열)
SOCIAL_TOKEN_ENCRYPTION_KEY=your-32-char-random-encryption-key
SOCIAL_TOKEN_IV_LENGTH=16

# =======================
# 📊 소셜 미디어 분석 & 메트릭
# =======================

# 메트릭 수집 간격 (시간 단위)
METRICS_COLLECTION_INTERVAL=24
AUTO_METRIC_UPDATE_ENABLED=true

# 분석 데이터 보관 기간 (일 단위)  
ANALYTICS_RETENTION_DAYS=365

# =======================
# ⏰ 스케줄링 및 자동화 설정
# =======================

# 스케줄러 설정
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=Asia/Seoul
DEFAULT_POST_SCHEDULE_INTERVAL=30  # 분 단위

# 콘텐츠 자동 생성 설정
AUTO_CONTENT_GENERATION_ENABLED=false
CONTENT_GENERATION_DAILY_LIMIT=10
CONTENT_GENERATION_CREDITS_PER_POST=1

# =======================
# 📈 크레딧 시스템 설정
# =======================

# 기본 크레딧 설정
NEW_USER_WELCOME_CREDITS=100
DAILY_FREE_CREDITS=5
CONTENT_GENERATION_COST=1
AI_OPTIMIZATION_COST=2
ANALYTICS_REPORT_COST=3

# =======================
# 🔐 웹훅 시크릿 (Convex 환경변수에서 설정 필요)
# =======================
# 아래 변수들은 보안상 .env.local 파일에 추가하지 말고
# Convex dashboard의 환경변수에서 직접 설정하세요:
#
# CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret
# LEMONSQUEEZY_WEBHOOK_SECRET=your_webhook_secret
# TWITTER_WEBHOOK_SECRET=your_twitter_webhook_secret
# THREADS_WEBHOOK_SECRET=your_threads_webhook_secret

